<h1> My Favorite Pets </h1>
<div class='center-div'>
  <% @pets.each do |pet| %>
      <p> <%= link_to "#{ pet.name}", "/pets/#{pet.id}" %> </p>
      <p> <%= image_tag("#{pet.image_url}", {:style => "width:300px;"}) %></p>
      <p id=delete<%="#{pet.id}"%> > <%= link_to 'Delete This Pet From Favorites', "/favorites/#{pet.id}", method: :delete %><br></p>
  <% end %>
</div>
