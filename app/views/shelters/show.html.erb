<h1><%= @shelter.name %></h1>
<h2><%= link_to 'Adoptable Pets', "/shelters/#{@shelter.id}/pets"%></h2>
<div class='center-div'>
<p>Address: <%= @shelter.address %></p>
<p>City: <%= @shelter.city %></p>
<p>State: <%= @shelter.state %></p>
<p>Zip Code: <%= @shelter.zip_code %></p>
<%= link_to 'Update This Shelter', "/shelters/#{@shelter.id}/edit", class: 'button-left'%>
<%= link_to 'Delete This Shelter', "/shelters/#{@shelter.id}", method: :delete, class: 'button-right' %>
</div>
</br>
<section class= 'center-div'>
  <% @reviews.each do |review| %>
    <section id=reviews-<%"#{review.id}"%>
    </br>
      <p> Review #<%=review.id%> </p>
      <p><%= review.title%> </p>
      <p><%= review.rating %> stars</p>
      <p> <b> Review: </b> <%= review.content %></p>
      <p><%= review.image_url%> </p>
    </section>
 <%end%>
</section>
<h2> <%= link_to 'Create A New Review', '/reviews/new'%></h2>
