<h1> Adopt Don't Shop: Shelter List </h1>
<div class='error-div'>
  <%= render "shared/flash" %>
</div>
<h2> <%= link_to 'Create New Shelter', '/shelters/new', method: :get%></h2>
<% @shelters.each do |shelter| %>
    <div class='center-div'>
      <h2> <%= link_to shelter.name, "/shelters/#{shelter.id}" %></h2>
      <p><%= link_to 'Edit This Shelter', "/shelters/#{shelter.id}/edit", method: :get%></br>
      <%= link_to 'Delete This Shelter', "/shelters/#{shelter.id}", method: :delete %></p>
    </div>
<% end %>
