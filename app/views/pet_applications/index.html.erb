<h1>All Applications for <%=@pet.name%></h1>
<section class='center-div'>
<%if !@applications.empty?%>
  <% @applications.each do |app| %>
    <ul>
      <section id="app-<%= app.id %>">
        <li>
          <%= link_to app.name, "/applications/#{app.id}" %>
        </li>
      </section>
    </ul><br><br>
  <% end %>
<% else %>
  <h2>No applications have been submitted for this pet.</h2><br>
<% end %>
</section>
