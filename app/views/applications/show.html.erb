<h1>All Pending Applications</h1>
<div class='center-div'>
  <%= @application.name %>
  <%= @application.address %>
  <%= @application.city %>
  <%= @application.state %>
  <%= @application.zip %>
  <%= @application.phone_number %>
  <%= @application.description %>

  <% @application.pets.each do |pet| %>
  <%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
  <%= link_to "Approve Application for #{pet.name}", "/pets/#{pet.id}/#{pet.is_adoptable}/applications", method: :patch %>
  <%end %>
</div>
