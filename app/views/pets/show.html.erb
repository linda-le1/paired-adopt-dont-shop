<div class='center-div'>
  <%= image_tag("#{@pet.image_url}", {:style => "width:300px;"}) %>
<h2><%= @pet.name %></h2>
  <p>Description: <%= @pet.description %></p>
  <p>Approximate Age: <%= @pet.approximate_age%></p>
  <p>Gender: <%= @pet.sex %></p>
<% if @pet.is_adoptable %>
  <p>Status: Adoptable</p>
<% else %>
  <p>Status: Adoption Pending</p>
<% end %>
<p> <% @pet.applications.each do |app| %>
    <% if app.approval_status %>
    On hold for <%= app.name %>
      <% end %> </p>
  <% end %>

<p><%= link_to 'Edit Pet', "/pets/#{@pet.id}/edit" %><br>
<%= link_to 'Delete Pet', "/pets/#{@pet.id}", method: :delete %><br>
<% if !@favorites.include?(@pet.id.to_s) %>
<p>  <%= link_to 'Favorite This Pet', "/favorites/#{@pet.id}", method: :patch %><br></p>
<%else%>
  <%= link_to 'Delete This Pet From Favorites', "/favorites/#{@pet.id}", method: :delete %><br>
<%end%>
<%= link_to 'View All Applications for this Pet', "/pets/#{@pet.id}/applications" %>

</div>
