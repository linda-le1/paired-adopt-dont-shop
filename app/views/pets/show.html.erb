<div class='center-div'>
<%= image_tag("#{@pet.image_url}", {:style => "width:300px;"}) %>
<h2><%= @pet.name %></h2>
<p>Description: <%= @pet.description %></p>
<p>Approximate Age: <%= @pet.approximate_age%></p>
<p>Gender: <%= @pet.sex %></p>
<% if @pet.is_adoptable %>
 <p>Status: Adoptable</p>
<% else %>
 <p>Status: Adoption Pending</p>
<% end %>>

<p><%= link_to 'Edit Pet', "/pets/#{@pet.id}/edit" %><br>

<%= link_to 'Delete Pet', "/pets/#{@pet.id}", method: :delete %><br>

<%= link_to 'Favorite This Pet', "/pets/#{@pet.id}/favorite", method: :patch %><br>
</div>
